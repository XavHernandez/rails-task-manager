<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<p> <%= link_to "Edit Task", edit_task_path %> </p>
<p> <%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %> </p>
<p> <%= link_to "Return to Tasks List", tasks_path %> </p>
